<!-- views/admin/change_password.ejs -->

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Изменить Пароль - Админ-панель</title>
    <link rel="stylesheet" href="/css/common.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <%- include('../partials/header') %>
    <main>
        <div class="admin-dashboard">
            <h1>Изменить Пароль</h1>
            <% if (error_msg && error_msg.length > 0) { %>
                <ul class="errors">
                    <% error_msg.forEach(error => { %>
                        <li><%= error %></li>
                    <% }) %>
                </ul>
            <% } %>
            <% if (errors && errors.length > 0) { %>
                <ul class="errors">
                    <% errors.forEach(error => { %>
                        <li><%= error.msg %></li>
                    <% }) %>
                </ul>
            <% } %>
            <form action="/admin/settings/change-password" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                
                <label for="current_password">Текущий пароль:</label>
                <input type="password" id="current_password" name="current_password" required>

                <label for="new_password">Новый пароль:</label>
                <input type="password" id="new_password" name="new_password" required>

                <label for="confirm_new_password">Подтвердите новый пароль:</label>
                <input type="password" id="confirm_new_password" name="confirm_new_password" required>

                <button type="submit" class="form-login-button">Изменить Пароль</button>
            </form>
            <a href="/admin" class="button">Вернуться назад</a>
        </div>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>
