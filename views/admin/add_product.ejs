<!-- views/admin/add_product.ejs -->

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Добавить Товар - Админ-панель</title>
    <link rel="stylesheet" href="/css/common.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <%- include('../partials/header') %>
    <main>
        <div class="admin-dashboard">
            <h1>Добавить Новый Товар</h1>

            <% if (error_msg && error_msg.length > 0) { %>
                <div class="toast error">
                    <%= error_msg %>
                </div>
            <% } %>

            <% if (errors && errors.length > 0) { %>
                <ul class="errors">
                    <% errors.forEach(error => { %>
                        <li><%= error.msg %></li>
                    <% }) %>
                </ul>
            <% } %>

            <form action="/admin/products/add" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                <label for="name">Название:</label>
                <input type="text" id="name" name="name" value="<%= name %>" required>

                <label for="price">Цена:</label>
                <input type="text" id="price" name="price" value="<%= price %>" required>

                <label for="description">Описание:</label>
                <textarea id="description" name="description" required><%= description %></textarea>

                <label for="characteristics">Характеристики:</label>
                <textarea id="characteristics" name="characteristics" required><%= characteristics %></textarea>

                <label for="image">Изображение:</label>
                <input type="file" id="image" name="image" accept="image/*" required>

                <!-- Контейнер для кнопок -->
                <div class="form-buttons">
                    <button type="submit" class="form-login-button">Добавить Товар</button>
                    <a href="/admin/products" class="button">Вернуться назад</a>
                </div>
            </form>
        </div>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>
